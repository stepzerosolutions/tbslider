<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget id="tbslider" class="Stepzerosolutions\Tbslider\Block\Slider"
            placeholder_image="Stepzerosolutions_Tbslider::images/slider_block.png">
        <label translate="true">Bootstrap Slider</label>
        <description translate="true">Display Slider</description>
        <parameters>
            <parameter name="slider_id" xsi:type="block" visible="true" required="true" sort_order="20">
                <label translate="true">Slider</label>
                <block class="Stepzerosolutions\Tbslider\Block\Adminhtml\Block\Widget\Chooser">
                    <data>
                        <item name="button" xsi:type="array">
                            <item name="open" xsi:type="string" translate="true">Select Slider...</item>
                        </item>
                    </data>
                </block>
            </parameter>
        </parameters>
    </widget>
</widgets>
